<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:padding="5dp"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".user_interface.add_or_edit_recipe.AddOrEditRecipeFragment"
    android:background="@color/color_light_coral">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp"
        android:background="@color/color_light_coral">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/app_title"
            android:text="@string/add_or_edit_recipe"
            android:fontFamily="@font/ausa"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/color_dark_purple"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_marginBottom="5dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/enter_the_title"
                android:id="@+id/recipe_Title"
                android:layout_marginBottom="5dp"
                android:textColor="@color/color_dark_purple"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_marginBottom="5dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/enter_the_time_in_minutes"
                android:id="@+id/time_input"
                android:inputType="numberSigned"
                android:layout_marginBottom="5dp"
                android:textColor="@color/color_dark_purple"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_marginBottom="5dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/enter_the_number_of_servings"
                android:id="@+id/servings_text"
                android:inputType="numberSigned"
                android:layout_marginBottom="5dp"
                android:textColor="@color/color_dark_purple"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_marginBottom="5dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/enter_the_score"
                android:id="@+id/score_input"
                android:inputType="numberSigned"
                android:layout_marginBottom="5dp"
                android:textColor="@color/color_dark_purple"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_marginBottom="5dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:hint="@string/enter_description"
                android:id="@+id/recipe_Desc"
                android:textColor="@color/color_dark_purple"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_marginBottom="5dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:hint="@string/enter_ingredients"
                android:id="@+id/recipe_ingre"
                android:textColor="@color/color_dark_purple"/>

        </com.google.android.material.textfield.TextInputLayout>

        <ImageView
            android:id="@+id/uploaded_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            tools:src="@tools:sample/avatars" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="@string/add_image"
            android:drawableEnd="@drawable/add_a_photo_24px"
            android:drawableTint="@color/white"
            android:id="@+id/image_pick_btn"
            android:backgroundTint="@color/color_dark_purple"
            android:textColor="@android:color/white"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/save"
            android:drawableEnd="@drawable/save_24px"
            android:drawableTint="@color/white"
            android:id="@+id/finish_btn"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:backgroundTint="@color/color_dark_purple"
            android:textColor="@android:color/white"/>

    </LinearLayout>
</ScrollView>
