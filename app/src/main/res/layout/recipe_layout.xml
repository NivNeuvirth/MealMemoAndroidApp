<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardUseCompatPadding="true">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/default_image"
        android:id="@+id/itemImage"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#80000000">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Main item title"
            android:gravity="center"
            android:fontFamily="@font/roboto_regular"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:id="@+id/item_title" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="short desc"
            android:fontFamily="@font/roboto_regular"
            android:textSize="16sp"
            android:textStyle="italic"
            android:textColor="@color/white"
            android:id="@+id/item_description"
            android:maxLines="2"
            android:ellipsize="end"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:gravity="bottom">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/item_time"
                    android:text="duration"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:drawablePadding="8dp"
                    android:layout_weight="1"
                    app:drawableStartCompat="@drawable/schedule_24px"
                    app:drawableTint="@color/color_light_coral" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/item_diff"
                    android:text="diff"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:drawablePadding="8dp"
                    android:layout_weight="1"
                    app:drawableStartCompat="@drawable/speed_24px"
                    app:drawableTint="@color/color_light_coral" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/item_cal"
                    android:text="cal"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:drawablePadding="8dp"
                    android:layout_weight="1"
                    app:drawableStartCompat="@drawable/mode_heat_24px"
                    app:drawableTint="@color/color_light_coral" />

            </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>